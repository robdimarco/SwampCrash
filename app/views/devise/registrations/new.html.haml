.content
    - [:error, :notice, :alert].each do |f|
        - if flash.include? f
            %div{:class=>"error", :id=>"flash_#{f}"}= flash[f]
    %h2 Sign up
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class=>"bp"}) do |f|
        = devise_error_messages!
        .field
            = f.label :email
            %br/
            = f.email_field :email
        .field
            = f.label :password
            %br/
            = f.password_field :password
        .field
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation
        %p= f.submit "Sign up"
.content
    %h2 OR....
.content
    = render :partial=>"devise/shared/third_party_links"