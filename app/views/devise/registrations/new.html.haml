.row
  - [:error, :notice, :alert].each do |f|
    - unless flash[f].blank?
      .alert.alert-error= flash[f]
.row
  %h2 Sign Up
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class=>"form-horizontal"}) do |f|
    = f.input :email
    = f.input :password
    = f.input :password_confirmation
    - if devise_mapping.rememberable?
      = f.input :remember_me, as: :boolean
    %p= f.button :submit, "Sign up", class: 'btn btn-primary'
= render :partial => "devise/shared/user_links"
.row
  %h2 OR....
.row
  = render :partial=>"devise/shared/third_party_links"