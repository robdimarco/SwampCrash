.row
  - if controller_name != 'sessions'
    .user_link= link_to "Sign in", new_session_path(resource_name)
  - if devise_mapping.registerable? && controller_name != 'registrations'
    .user_link= link_to "No Account?  Sign up", new_registration_path(resource_name)
  - if devise_mapping.recoverable? && controller_name != 'passwords'
    .user_link= link_to "Forgot your password?", new_password_path(resource_name)
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    .user_link= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)
  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    .user_link= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name)