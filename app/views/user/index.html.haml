- unless flash[:notice].blank?
    .content
        .info
            = flash[:notice]

- if current_user.errors.any?
    .content
        #error_explanation
            %h2
                = pluralize(current_user.errors.count, "error")
                stopped your updates from saving
            %ul
                - current_user.errors.full_messages.each do |msg|
                    %li= msg.content
.content
    %h2 My Info (#{current_user.full_name})
    = form_for current_user, :html=>{class:"bp"}, :url=>current_user_path do |f|
        .field
            = f.label :full_name, "Display Name"
            %br/
            = f.text_field :full_name
        .field
            = f.label :email, "Email"
            %br/
            = f.text_field :email
        .actions
            = f.submit "Update", :class=>"button icon approve"
.content
    %hr            
.content
    %h2 Change Password
    = form_for current_user, :html=>{class:"bp"}, :url=>current_user_path do |f|
        .field
            = f.label :password, "New Password"
            %br/
            = f.password_field :password
        .field
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation
        .actions
            = f.submit "Update Password", :class=>"button icon approve"
                    
.content
    %hr

.content
    %h2 Notifications
    = form_for current_user, :html=>{class:"bp"}, :url=>current_user_path do |f|
        .field
            = f.check_box :notify_me_on_completion
            = f.label :notify_me_on_completion, "Notify on Completed Crashes"
        .field
            = f.check_box :notify_me_on_new
            = f.label :notify_me_on_new, "Notify on New Crashes"
        .actions
            = f.submit "Update", :class=>"button icon approve"
        
