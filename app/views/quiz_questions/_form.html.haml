    = f.text_field :value
.field
    = f.label :answers_str, "Answers (Comma Separated)"
    %br/
    = f.text_field :answers_str
.field
    = f.label :reference_url, "Reference URL"
    %br/
    = f.text_field :reference_url
.field
    = f.label :tag_list, "Tag List (Comma Separated)"
    %br/
    = f.text_field :tag_list
