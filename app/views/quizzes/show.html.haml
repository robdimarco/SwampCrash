- content_for :title, "SwampCrash...#{@quiz.name}"
- unless notice.blank?
    .content
        .notice= notice
.content
    .info
        .invite_more_lead 
            %p
                Like a Royal Rumble, SwampCrash gets better the more challengers enter the ring.  Share!
        = render 'shared/share_this'
.content
    #QuizMetaBox
        %h1.quiz_name
            = @quiz.name
            .author_acknowledgement Brought to you by #{@quiz.owner}
        %h3 About This Crash
        %dl
            %dt Rules To Play
            %dd= link_to 'Rules', content_path(:action=>'about')
            - unless @quiz.description.blank?
                %dt Details
                %dd= auto_link(@quiz.description)
            %dt Categories
            %dd= @quiz.questions.collect(&:tags).flatten.uniq.collect( &:name).sort.join(", ")
            %dt Current Participants
            %dd= AnswerSheet.where(:quiz_id=>@quiz.id).collect(&:user).collect(&:to_s).join(", ")
.content
    %hr
    
= render quiz_view_partial(@quiz)

