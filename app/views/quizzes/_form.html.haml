= form_for(@quiz, :html=>{class:"bp"}) do |f|
    - if @quiz.errors.any?
        #error_explanation
            %h2
                = pluralize(@quiz.errors.count, "error")
                prohibited this quiz from being saved:
            %ul
                - @quiz.errors.full_messages.each do |msg|
                    %li= msg
    .field
        = f.label :name
        %br/
        = f.text_field :name
    .field
        = f.label :description
        %br/
        = f.text_area :description
    - unless @quiz.quiz_questions.empty?
        %h6 Questions
        %ol
            - @quiz.quiz_questions.each do |q|
                %li
                    = q.question.value
                    %ul.inline-list
                        %li= link_to "Edit", edit_quiz_question_path(q)
                        %li= link_to "Delete", quiz_question_path(q), :method=>:delete
                
    .actions
        - unless @quiz.new_record?
            %button#AddQuestion Add Question
            %br/
        = f.submit

- content_for :footer_js do
    :javascript
        $(document).ready(function() {        
            $("#AddQuestion").click(function() {
                document.location.href = "#{new_quiz_question_path(@quiz)}";
                return false;
            });
        });