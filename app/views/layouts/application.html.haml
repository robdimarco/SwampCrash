!!! 5
%html{:lang=>"en"}
%head
    %meta{:charset=>"UTF-8"}
    %meta{:"http-equiv"=>"X-UA-Compatible", :content=>"IE=edge,chrome=1"}
    %meta{:name=>"description", :content=>""}
    %link{:rel=>"sitemap",:href=>"/sitemap.xml", :type=>"application/xml"}
    %link{:rel=>"alternate", :type=>"application/atom+xml", :title=>"SwampCrash Sitewide Atom feed", :href=>"/feed/atom.xml"}
    %title= page_title("SwampCrash...chomp")
    = css3buttons_stylesheets :include_reset => false
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if IE]
        = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = csrf_meta_tag
%body.bp
    %div{:class=>blueprint_container}
        #header
            %h1#title= page_title("SwampCrash...")
            %nav
                %ul.tabs
                    = menu_tab_link 'Home', root_path
                    = menu_tab_link 'What Is It', content_path(:action=>'about')
                    = menu_tab_link 'TODOs', content_path(:action=>'todos')
                    - if user_signed_in?
                        = menu_tab_link('Log Out', destroy_user_session_path)
                    - else 
                        = menu_tab_link('Sign In', new_user_session_path)
        .container
            = yield
    %footer
        %h6 Copyright &copy; 2011 - 416 Software, LLC
        %ul.link_list
            %li= mail_button_link_to "Mail", content_path(:action=>'contact_us')
            %li= rss_button_link_to "RSS", '/feed/atom.xml'
            %li= link_to(image_tag('/images/social-icons/twitter_32.png', :alt=>"Follow on Twitter", :id=>'FollowOnTwitter'), 'https://www.twitter.com/swampcrash', :target=>'_new')
    %script{:src=>"//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"}
    %script{:src=>"//ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/jquery-ui.min.js"}
    = javascript_tag %Q[!window.jQuery && document.write(unescape('%3Cscript src="/javascripts/jquery.min.js"%3E%3C/script%3E'))]
    = javascript_include_tag "rails", "application"
    = content_for :footer_js
    - if Rails.env == "production"
        :javascript
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-22782944-1']);
            _gaq.push(['_trackPageview']);

            (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();