- unless notice.blank?
    .content
        .notice= notice
.content
    = form_for(@contact_us, :url=>content_path(:action=>'contact_us'), :html=>{class:"bp", method:"POST"}) do |f|
        - if @contact_us.errors.any?
            #error_explanation
                %h2 Problem Sending Mail
                %ul
                    - @contact_us.errors.full_messages.each do |msg|
                        %li= msg
        .field
            = f.label :name
            %br/
            = f.text_field :name
        .field
            = f.label :email, "Your Email Address"
            %br/
            = f.text_field :email
        .field
            = f.label :subject
            %br/
            = f.text_field :subject
        .field
            = f.label :message
            %br/
            = f.text_area :message
        .actions
            = f.submit :class=>"button icon mail", :value=>"Send"